<UserControl
    x:Class="AppTestMVVMBehavior.Views.Componentes.UserDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppTestMVVMBehavior.Views.Componentes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:AppTestMVVMBehavior.ViewModels.Componentes"
    Padding="10"
    d:DataContext="{d:DesignInstance Type=vm:UserDetailViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="14"
    Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid>
        <Border
            Padding="10"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ui:TextBlock FontTypography="Title" Text="Detalles Usuarios" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto " />
                        <ColumnDefinition Width="auto " />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock
                        Grid.Row="0"
                        Margin="10"
                        Text="Nombre Completo: " />
                    <ui:TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="10"
                        Text="{Binding FullName}" />

                    <ui:TextBlock
                        Grid.Row="1"
                        Margin="10"
                        Text="Email: " />
                    <ui:TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10"
                        Text="{Binding Email}" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
